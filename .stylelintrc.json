{
  "extends": ["stylelint-config-standard", "stylelint-config-clean-order"],
  "plugins": ["stylelint-order"],
  "overrides": [
    {
      "files": ["**/*.{html,jsx,tsx}"],
      "customSyntax": "postcss-html"
    }
  ],
  "rules": {
    "selector-class-pattern": "^[a-z0-9\\-]+(__[a-z0-9\\-]+)?(--[a-z0-9\\-]+)?$"
  }
}
